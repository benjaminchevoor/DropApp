<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.dropapp.dropapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dropapp.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="com.dropapp.services.DropDetectionService"
            android:enabled="true"
            android:exported="true">
        </service>

        <activity
            android:name="com.dropapp.activities.DataViewActivity"
            android:label="@string/title_activity_data_view"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
